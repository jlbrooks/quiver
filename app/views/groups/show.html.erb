<p>
  <strong>Name:</strong>
  <%= @group.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @group.description %>
</p>

<p>
  <h1>Users</h1>
  	<ol><%  @group.users.each do |user| %>
<li>
  <span><%= "#{user.name} - (#{user.email})" %></span>
  </li>
  <% end %>	</ol>
</p>

<p>
  <% if @group.posts.any? %>
  	<h1>Posts from users</h1>
    			<ol class="posts">
    				<% @group.posts.order(:created_at).reverse_order.first(3).each do |post| %>
              <% @user = post.user %>
    					  <span><%= link_to post.title, post_path(post), :class => 'title' %></span>
    					<span class="timestamp">Posted on <%= post.created_at.to_formatted_s(:long_ordinal) %> by <%= @user.name %>  </span>
   					<span class="body"><%= post.body %></span>
   					<br>
   					<br>
    				<% end %>
    			</ol>
  <% end %>
    <%= link_to 'create group post', controller: "posts", action: "creategrouppost", group_id: @group.id %>

<br>
 </p>

<%= link_to 'View users', controller: "groups", action: "viewusers", id: @group.id %> |
<%= link_to 'Show all group posts', controller: "groups", action: "showgroupposts", id: @group.id %> |
<%= link_to 'Edit', edit_group_path(@group) %> |
<%= link_to 'Back', groups_path %> | 
<%= link_to 'Add user to group', controller: "groups", action: "adduser", id: @group.id %> |
<%= link_to 'Disband', @group, method: :delete, data: { confirm: "Are you sure?"} %>
