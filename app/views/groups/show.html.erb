<p>
  <strong>Name:</strong>
  <%= @group.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @group.description %>
</p>

<p>
  <h1>Users</h1>
  	<ol><%  @group.users.each do |user| %>
<li>
  <span><%= "#{user.name} - (#{user.email})" %></span>
  </li>
  <% end %>	</ol>
</p>

<p>
	<h1>Posts from users</h1>
	<% @group.users.each do |user|%>
  		<% if user.posts.any? %>
  			<strong> <%= "Posts by #{user.name}" %> </strong>
  			<ol class="posts">
  				<% user.posts.last(3).each do |post| %>
  					<span><b><%= post.title %></b></span>
  					<span class="timestamp">Posted on <%= post.created_at.to_formatted_s(:long_ordinal) %> </span>
 					<span class="body"><%= post.body %></span>
 					<br>
 					<br>
  				<% end %>
  			</ol>
  		<% end %>	
	<% end %>

<br>
 </p>

<%= link_to 'Edit', edit_group_path(@group) %> |
<%= link_to 'Back', groups_path %> | 
 <%= link_to 'Add user to group', controller: "groups", action: "adduser", id: @group.id %> |
<%= link_to 'Disband', @group, method: :delete, data: { confirm: "Are you sure?"} %>
