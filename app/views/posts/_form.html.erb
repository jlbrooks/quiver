<%= form_for(@post) do |f| %>
  <%= render "/shared/error", model: @post %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body, :id => "input_body" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
